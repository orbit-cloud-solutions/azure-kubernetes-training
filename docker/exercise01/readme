cd ~
git clone https://github.com/orbit-cloud-solutions/azure-kubernetes-training
cd ~/azure-kubernetes-training/docker/exercise01/
dir
more Dockerfile
docker build -t backend . # řádek končí tečkou
docker images
docker run -d -p 8000:8000 --name backend backend # -d spustí kontejner na pozadí
docker ps # vypíše běžící kontejnery
curl http://localhost:8000/
docker inspect backend|more # ukončit klávesou Q
docker stop backend
docker ps -a # ukáže i zastavené kontejnery
docker rm backend # a je uklizeno ;-)
docker images # ale obraz nám zůstal
